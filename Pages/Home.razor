@page "/"
@using Microsoft.Extensions.Localization
@using AboutMe.Services
@inject IStringLocalizer<Home> Localizer
@inject ThemeService ThemeService
@implements IDisposable

<MudGrid>
    <MudItem xs="12">
        <MudPaper Class="pa-6 animate-in" Elevation="3" Style="border-radius: 20px;">
            <MudText Typo="Typo.h3" Class="mb-4" Align="Align.Center" Style="@GetNameColor()">Israel Barbosa Silva</MudText>

            <MudDivider Class="my-4" />

            <div class="animate-in" style="animation-delay: 0.1s;">
                <MudText Typo="Typo.h5" Class="mb-3" Style="font-weight: 600;">
                    <MudIcon Icon="@Icons.Material.Filled.Person" Class="mr-2" />
                    @Localizer["ResumeTitle"]
                </MudText>
                <MudText Style="line-height: 1.8; text-align: justify;">
                    <p>@Localizer["ResumeText1"]</p>
                    <p>@Localizer["ResumeText2"]</p>
                    <p>@Localizer["ResumeText3"]</p>
                </MudText>
            </div>

            <MudDivider Class="my-4" />

            <div class="animate-in" style="animation-delay: 0.2s;">
                <MudText Typo="Typo.h5" Class="mb-4" Style="font-weight: 600;">
                    <MudIcon Icon="@Icons.Material.Filled.Code" Class="mr-2" />
                    @Localizer["HardSkills"]
                </MudText>
                <MudGrid Spacing="3">
                    <MudItem xs="12" sm="6" md="4">
                        <MudText Typo="Typo.h6" Class="mb-3" Style="font-weight: 600;">@Localizer["Languages"]</MudText>
                        <MudList T="string" ReadOnly="true" Dense="true">
                            <MudListItem T="string">
                                <MudStack Row="true" AlignItems="AlignItems.Center" Spacing="2">
                                    <i class="devicon-csharp-plain colored tech-icon" style="font-size: 1.8em;"></i>
                                    <MudText>C#</MudText>
                                </MudStack>
                            </MudListItem>
                            <MudListItem T="string">
                                <MudStack Row="true" AlignItems="AlignItems.Center" Spacing="2">
                                    <i class="devicon-azuresqldatabase-plain colored tech-icon" style="font-size: 1.8em;"></i>
                                    <MudText>SQL</MudText>
                                </MudStack>
                            </MudListItem>
                        </MudList>
                    </MudItem>
                    <MudItem xs="12" sm="6" md="4">
                        <MudText Typo="Typo.h6" Class="mb-3" Style="font-weight: 600;">Frameworks</MudText>
                        <MudList T="string" ReadOnly="true" Dense="true">
                            <MudListItem T="string">
                                <MudStack Row="true" AlignItems="AlignItems.Center" Spacing="2">
                                    <i class="devicon-dotnetcore-plain colored tech-icon" style="font-size: 1.8em;"></i>
                                    <MudText>.NET Core | .NET | ASP.NET Core</MudText>
                                </MudStack>
                            </MudListItem>
                            <MudListItem T="string">
                                <MudStack Row="true" AlignItems="AlignItems.Center" Spacing="2">
                                    <i class="devicon-windows8-original colored tech-icon" style="font-size: 1.8em;"></i>
                                    <MudText>Windows Forms</MudText>
                                </MudStack>
                            </MudListItem>
                            <MudListItem T="string">
                                <MudStack Row="true" AlignItems="AlignItems.Center" Spacing="2">
                                    <i class="devicon-dotnetcore-plain colored tech-icon" style="font-size: 1.8em;"></i>
                                    <MudText>Entity Framework Core</MudText>
                                </MudStack>
                            </MudListItem>
                            <MudListItem T="string">
                                <MudStack Row="true" AlignItems="AlignItems.Center" Spacing="2">
                                    <i class="devicon-blazor-original colored tech-icon" style="font-size: 1.8em;"></i>
                                    <MudText>Blazor</MudText>
                                </MudStack>
                            </MudListItem>
                        </MudList>
                    </MudItem>
                    <MudItem xs="12" sm="6" md="4">
                        <MudText Typo="Typo.h6" Class="mb-3" Style="font-weight: 600;">@Localizer["Tools"]</MudText>
                        <MudList T="string" ReadOnly="true" Dense="true">
                            <MudListItem T="string">
                                <MudStack Row="true" AlignItems="AlignItems.Center" Spacing="2">
                                    <i class="devicon-git-plain colored tech-icon" style="font-size: 1.8em;"></i>
                                    <MudText>Git</MudText>
                                </MudStack>
                            </MudListItem>
                            <MudListItem T="string">
                                <MudStack Row="true" AlignItems="AlignItems.Center" Spacing="2">
                                    <i class="devicon-dbeaver-plain colored tech-icon" style="font-size: 1.8em;"></i>
                                    <MudText>Dbeaver</MudText>
                                </MudStack>
                            </MudListItem>
                            <MudListItem T="string">
                                <MudStack Row="true" AlignItems="AlignItems.Center" Spacing="2">
                                    <i class="devicon-microsoftsqlserver-plain colored tech-icon" style="font-size: 1.8em;"></i>
                                    <MudText>SQL Server</MudText>
                                </MudStack>
                            </MudListItem>
                            <MudListItem T="string">
                                <MudStack Row="true" AlignItems="AlignItems.Center" Spacing="2">
                                    <i class="devicon-postgresql-plain colored tech-icon" style="font-size: 1.8em;"></i>
                                    <MudText>PostgreSQL</MudText>
                                </MudStack>
                            </MudListItem>
                            <MudListItem T="string">
                                <MudStack Row="true" AlignItems="AlignItems.Center" Spacing="2">
                                    <i class="devicon-mysql-plain colored tech-icon" style="font-size: 1.8em;"></i>
                                    <MudText>MySQL</MudText>
                                </MudStack>
                            </MudListItem>
                        </MudList>
                    </MudItem>
                </MudGrid>
            </div>

            <MudDivider Class="my-4" />

            <div class="animate-in" style="animation-delay: 0.3s;">
                <MudText Typo="Typo.h5" Class="mb-4" Style="font-weight: 600;">
                    <MudIcon Icon="@Icons.Material.Filled.Work" Class="mr-2" />
                    @Localizer["ProfessionalExperience"]
                </MudText>
                <MudTimeline TimelinePosition="TimelinePosition.Start" TimelineAlign="TimelineAlign.Start">

                    <MudTimelineItem Color="Color.Primary" Size="Size.Large">
                        <MudText Typo="Typo.h6" Style="font-weight: 600;">@Localizer["SupportAnalyst"]</MudText>
                        <MudText Typo="Typo.subtitle1" Color="Color.Secondary">Sge Automacao e Servicos | @Localizer["Month7"] 2018 - @Localizer["Month5"] 2022</MudText>
                        <MudText Class="mt-2" Style="line-height: 1.7;">
                            <p>@Localizer["SupportAnalyst1"]</p>
                            <p>@Localizer["SupportAnalyst2"]</p>
                            <p>@Localizer["SupportAnalyst3"]</p>
                            <p>@Localizer["SupportAnalyst4"]</p>
                        </MudText>
                    </MudTimelineItem>

                    <MudTimelineItem Color="Color.Primary" Size="Size.Large">
                        <MudText Typo="Typo.h6" Style="font-weight: 600;">@Localizer["NetDeveloper"]</MudText>
                        <MudText Typo="Typo.subtitle1" Color="Color.Secondary">Sge Automacao e Servicos | @Localizer["Month5"] 2022 - @Localizer["Month8"] 2025</MudText>
                        <MudText Class="mt-2" Style="line-height: 1.7;">
                            <MudText Typo="Typo.body1" Style="font-weight: bold;" Class="mb-2">@Localizer["Responsibilities"]:</MudText>
                            <p>@Localizer["Responsibility1"]</p>
                            <p>@Localizer["Responsibility2"]</p>
                            <p>@Localizer["Responsibility3"]</p>
                            <p>@Localizer["Responsibility4"]</p>
                            <p>@Localizer["Responsibility5"]</p>
                            <MudDivider Class="my-3"/>
                            <MudText Typo="Typo.body1" Style="font-weight: bold;" Class="mb-2">@Localizer["Projects"]</MudText>
                            <p>@Localizer["Project1"]</p>
                            <p>@Localizer["Project2"]</p>
                            <p>@Localizer["Project3"]</p>
                            <p>@Localizer["Project4"]</p>
                            <p>@Localizer["Project5"]</p>
                        </MudText>
                    </MudTimelineItem>

                    <MudTimelineItem Color="Color.Success" Size="Size.Large">
                        <MudText Typo="Typo.h6" Style="font-weight: 600;">@Localizer["NetDeveloper"]</MudText>
                        <MudText Typo="Typo.subtitle1" Color="Color.Secondary">CRP Tecnologia | @Localizer["Month7"] 2025 - @Localizer["Current"]</MudText>
                        <MudChip T="string" Color="Color.Success" Size="Size.Small" Class="mt-2">@Localizer["Current"]</MudChip>
                        <MudText Class="mt-2" Style="line-height: 1.7;">
                            <p>@Localizer["CrpTecnologia1"]</p>
                        </MudText>
                    </MudTimelineItem>
                </MudTimeline>
            </div>

            <MudDivider Class="my-4" />

            <div class="animate-in" style="animation-delay: 0.4s;">
                <MudText Typo="Typo.h5" Class="mb-3" Style="font-weight: 600;">
                    <MudIcon Icon="@Icons.Material.Filled.School" Class="mr-2" />
                    @Localizer["Education"]
                </MudText>
                <div class="mt-3">
                    <MudText Typo="Typo.h6" Style="font-weight: 600;">@Localizer["DegreeName"]</MudText>
                    <MudText Typo="Typo.subtitle1" Color="Color.Secondary">Universidade Federal do Maranhao (UFMA) | 2020 - 2026</MudText>
                    <MudText Class="mt-2">
                        @Localizer["RelevantProjects"]:
                        <MudLink Target="_blank" Href="https://github.com/israel-bsi/realtyhub" Style="font-weight: 500;">@Localizer["RelevantProject1"]</MudLink>
                    </MudText>
                </div>
            </div>

            <MudDivider Class="my-4" />

            <div class="animate-in" style="animation-delay: 0.5s;">
                <MudText Typo="Typo.h5" Class="mb-3" Style="font-weight: 600;">
                    <MudIcon Icon="@Icons.Material.Filled.EmojiEvents" Class="mr-2" />
                    @Localizer["Certifications"]
                </MudText>
                <div class="mt-3">
                    <MudLink Typo="Typo.h6" Target="_blank" Href="https://www.freecodecamp.org/certification/israelbsi/foundational-c-sharp-with-microsoft" Style="font-weight: 600;">
                        Foundational C# with Microsoft - freeCodeCamp
                    </MudLink>
                    <MudText Typo="Typo.subtitle1" Color="Color.Secondary">freeCodeCamp.org | Microsoft | 2025</MudText>
                </div>
            </div>

            <MudDivider Class="my-4" />

            <div class="animate-in" style="animation-delay: 0.6s;">
                <MudText Typo="Typo.h5" Class="mb-3" Style="font-weight: 600;">
                    <MudIcon Icon="@Icons.Material.Filled.Language" Class="mr-2" />
                    @Localizer["LanguageSpeak"]
                </MudText>
                <MudList T="string" ReadOnly="true" Dense="true" Class="mt-3">
                    <MudListItem T="string">
                        <MudStack Row="true" AlignItems="AlignItems.Center" Spacing="3">
                            <span class="fi fi-br icon-badge" style="font-size: 2em;"></span>
                            <MudText Style="font-weight: 500;">@Localizer["LanguageSpeak1"]</MudText>
                        </MudStack>
                    </MudListItem>
                    <MudListItem T="string">
                        <MudStack Row="true" AlignItems="AlignItems.Center" Spacing="3">
                            <span class="fi fi-us icon-badge" style="font-size: 2em;"></span>
                            <MudText Style="font-weight: 500;">@Localizer["LanguageSpeak2"]</MudText>
                        </MudStack>
                    </MudListItem>
                </MudList>
            </div>

            <MudDivider Class="my-4" />

            <div class="animate-in" style="animation-delay: 0.7s;">
                <MudText Typo="Typo.h5" Class="mb-3" Style="font-weight: 600;">
                    <MudIcon Icon="@Icons.Material.Filled.ContactMail" Class="mr-2" />
                    @Localizer["Contact"]
                </MudText>
                <div class="mt-3">
                    <MudText Class="mb-3" Style="font-weight: 500;">
                        @Localizer["TextToContact"]
                        <MudLink Href="mailto:israelbsi.solucoes@gmail.com" Style="font-weight: 600;">israelbsi.solucoes@gmail.com</MudLink>
                    </MudText>
                    <MudStack Row="true" Spacing="3" Class="mt-3">
                        <MudButton Href="https://www.linkedin.com/in/israelbsilva/"
                                   StartIcon="@Icons.Custom.Brands.LinkedIn"
                                   Variant="Variant.Filled"
                                   Color="Color.Primary"
                                   Target="_blank"
                                   Size="Size.Large">
                            LinkedIn
                        </MudButton>
                        <MudButton Href="https://github.com/israel-bsi"
                                   StartIcon="@Icons.Custom.Brands.GitHub"
                                   Variant="Variant.Filled"
                                   Color="Color.Dark"
                                   Target="_blank"
                                   Size="Size.Large">
                            GitHub
                        </MudButton>
                    </MudStack>
                </div>
            </div>
        </MudPaper>
    </MudItem>
</MudGrid>



@code {
    protected override void OnInitialized()
    {
        ThemeService.OnThemeChanged += StateHasChanged;
    }

    private string GetNameColor()
    {
        return ThemeService.IsDarkMode ? "color: #ffffff; font-weight: bold;" : "color: #000000; font-weight: bold;";
    }

    public void Dispose()
    {
        ThemeService.OnThemeChanged -= StateHasChanged;
    }
}
